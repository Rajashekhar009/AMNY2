<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="#ffffff">
    
<LinearLayout
    android:id="@+id/titlelayout"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    style="@style/TopHeaderBar"
    android:gravity="left|center_vertical"
    android:orientation="horizontal">

	<ImageView
		android:id="@+id/topLeftBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:src="@drawable/back_icon" />

	<TextView
		android:id="@+id/titlename"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:text="@string/title_activity_update_profile"
		style="@style/TitleBarText" />

</LinearLayout>

<ScrollView
          android:id="@+id/scrollViewMyPro"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">    
    
	<RelativeLayout
	    android:id="@+id/loginBGLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:orientation="vertical"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"> 
	    
	    <RelativeLayout 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content" 
	        android:id="@+id/relAppVersion"    
	        android:layout_marginTop="5dp">
	        
	        <TextView
	            android:id="@+id/appVersionCode"
	            style="@style/allVersionLink"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"    
	            android:text="@string/app_version_code" />
        
        </RelativeLayout>
	   
	    <RelativeLayout
	        android:layout_width="wrap_content"
			android:layout_marginTop="10dp"
	        android:layout_height="wrap_content"
	        android:id="@+id/loginRelativeLayout1"
	        android:layout_alignLeft="@+id/relAppVersion" 
        	android:layout_below="@+id/relAppVersion">
	    
	    	<TextView
	            android:id="@+id/tvUsername"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:background="@drawable/change_password_field"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical"           
	            android:hint="Username" />
	    
	    	<TextView
	            android:id="@+id/tvEmail"
	            android:layout_below="@+id/tvUsername"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="Email" />
	            
	    	<EditText
	            android:id="@+id/tvFname"
	            android:layout_below="@+id/tvEmail"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:text="First name" />
	    	
	    	<EditText
	            android:id="@+id/tvLname"
	            android:layout_below="@+id/tvFname"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:text="Last name" />
	    	
	    	<TextView
	            android:id="@+id/tvDOB"
	            android:layout_below="@+id/tvLname"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="Date of Birth" />
	    	
	    	<TextView
	            android:id="@+id/tvCountry"
	            android:layout_below="@+id/tvDOB"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="Country" />
	    	
	    	<TextView
	            android:id="@+id/tvState"
	            android:layout_below="@+id/tvCountry"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="State" />
	    	
	    	<TextView
	            android:id="@+id/tvCity"
	            android:layout_below="@+id/tvState"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="City" />
	    	
	    	<EditText
	            android:id="@+id/tvAddr"
	            android:layout_below="@+id/tvCity"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="Address" />
	    	
	    	<EditText
	            android:id="@+id/tvZip"
	            android:layout_below="@+id/tvAddr"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="Zipcode" />
	    	
	    	<EditText
	            android:id="@+id/tvPhone"
	            android:layout_below="@+id/tvZip"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginTop="10dp"
	            android:paddingLeft="20dp"
	            android:gravity="center_vertical" 
	            android:background="@drawable/change_password_field"	                        
	            android:hint="Phone" />
	        
	    </RelativeLayout>
        
	    <RelativeLayout 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content" 
	        android:id="@+id/loginRelativeLayout2"
	        android:layout_alignLeft="@+id/loginRelativeLayout1" 
	        android:layout_below="@+id/loginRelativeLayout1"         
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="30dp">

			<Button
				android:id="@+id/btnEditProf"
				android:layout_width="200dp"
				android:layout_height="40dp"
				android:layout_centerHorizontal="true"
				android:layout_alignParentTop="true"
				android:text="UPDATE"
				style="@style/btnTextStyle"
				android:background="@drawable/red_button"
				android:gravity="center" />
	        
	    </RelativeLayout>
	
    </RelativeLayout>

</ScrollView>

</LinearLayout>