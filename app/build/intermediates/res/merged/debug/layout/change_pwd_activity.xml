<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="#ffffff">

	<LinearLayout
		android:id="@+id/titlelayout"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		style="@style/TopHeaderBar"
		android:gravity="left|center_vertical"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/topLeftBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:src="@drawable/back_icon" />

		<TextView
			android:id="@+id/titlename"
			style="@style/TitleBarText"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_marginRight="35dp"
			android:text="@string/title_activity_change_pwd" />

	</LinearLayout>

<RelativeLayout
    android:id="@+id/loginBGLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    
    <RelativeLayout
        android:layout_width="wrap_content"
		android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginRelativeLayout1"
        android:layout_alignParentTop="true">
    
    	<EditText
            android:id="@+id/eTOldPwd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/change_password_field"
            android:ems="10"
            android:paddingLeft="20dp"
            android:password="true"
            android:hint="Old Password" />
    
    	<EditText
            android:id="@+id/eTNewPwd"
            android:layout_below="@+id/eTOldPwd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/change_password_field"
            android:ems="10"
            android:password="true"
            android:hint="New Password" />
            
    	<EditText
            android:id="@+id/eTCnfmPwd"
            android:layout_below="@+id/eTNewPwd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/change_password_field"
            android:ems="10"
            android:password="true"
            android:hint="Confirm Password" />

		<Button
			android:id="@+id/btnChngPwd"
			android:layout_below="@+id/eTCnfmPwd"
			android:layout_width="200dp"
			android:layout_height="40dp"
			android:layout_marginTop="30dp"
			android:layout_centerHorizontal="true"
			android:text="Submit"
			style="@style/btnTextStyle"
			android:background="@drawable/red_button"
			android:gravity="center" />
        
    </RelativeLayout>


	<TextView
		android:id="@+id/appVersionCode"
		android:layout_alignParentBottom="true"
		android:layout_margin="10dp"
		style="@style/allVersionLink"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:text="@string/app_version_code" />
	
    </RelativeLayout>

</LinearLayout>